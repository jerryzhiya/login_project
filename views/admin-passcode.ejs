<h1 class="page-title">Admin Access</h1>

<% if (error_msg && error_msg.length > 0) { %>
  <div class="alert error">
    <ul>
      <% error_msg.forEach(msg => { %>
        <li><%= msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<% if (success_msg && success_msg.length > 0) { %>
  <div class="alert success">
    <ul>
      <% success_msg.forEach(msg => { %>
        <li><%= msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<form action="/club/admin" method="POST" class="form-card">
  <div class="form-group">
    <label for="passcode">Admin passcode:</label>
    <input type="password" id="passcode" name="passcode" placeholder="Enter admin passcode" required>
  </div>
  <button type="submit" class="btn primary">Become Admin</button>
</form>