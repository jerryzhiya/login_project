<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || "My App" %></title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header class="navbar">
    <nav>
      <a href="/" class="logo">My App</a>
      <div class="nav-links">
        <!-- Always show Home -->
        <a href="/" class="btn small">Home</a>

        <% if (user) { %>
          <!-- Show welcome + logout if logged in -->
          <span class="welcome">Welcome, <%= user.username %></span>
          <a href="/auth/log-out" class="btn small">Logout</a>
        <% } else { %>
          <!-- Show login + signup if not logged in -->
          <a href="/auth/log-in" class="btn small">Login</a>
          <a href="/auth/sign-up" class="btn small secondary">Sign Up</a>
        <% } %>
      </div>
    </nav>
  </header>

  <!-- Flash messages -->
  <section class="flash-messages">
    <% if (success_msg && success_msg.length > 0) { %>
      <div class="alert success">
        <% success_msg.forEach(msg => { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>
    <% if (error_msg && error_msg.length > 0) { %>
      <div class="alert error">
        <% error_msg.forEach(msg => { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>
  </section>

  <main class="container">
    <%- body %>
  </main>

  <footer class="site-footer">
    <div class="footer-container">
      <p>&copy; <%= new Date().getFullYear() %> Login Project. All rights reserved.</p>
      <nav class="footer-nav">
        <a href="/">Home</a>
        <a href="/auth/sign-up">Sign Up</a>
        <a href="/auth/log-in">Login</a>
        <a href="/dashboard">Dashboard</a>
      </nav>
    </div>
  </footer>
</body>
</html>